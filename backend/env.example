# =====================
# Database Configuration
# =====================
# Format: postgresql://<username>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://quickflip_user:QuickData@localhost:5432/quickflip_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# External Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# Google Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=quickflip-images
GOOGLE_CLOUD_CREDENTIALS_PATH=path/to/service-account.json

# Platform API Keys (for message monitoring)
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
OFFERUP_API_KEY=your-offerup-api-key
CARGURUS_API_KEY=your-cargurus-api-key

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"] 